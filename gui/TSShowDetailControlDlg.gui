$showAutoDetail = false;

function showToggleDetail()
{
	if ($showAutoDetail)
   {
   	showDetailText.setValue("Slider Sets Detail Level");
      showSetDetailSlider();
      $showAutoDetail = false;
   }
   else
   {
   	showDetailText.setValue("Auto Detail Using Distance");
      $showAutoDetail = true;
   }

}


